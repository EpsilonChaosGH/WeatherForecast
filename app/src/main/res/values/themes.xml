<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherForecast" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="textInputStyle">@style/GlobalTextInputStyle</item>
        <item name="android:textViewStyle">@style/GlobalTextViewStyle</item>
    </style>

    <style name="WeatherForecastTabs" parent="Widget.Design.BottomNavigationView" />

    <style name="GlobalTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <style name="GlobalTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WeatherIconImageView">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WeatherDetailsTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleSettingsTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/medium_space</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="HintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextView.Weather">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_marginTop">@dimen/low_space</item>
    </style>

    <style name="HintTextView.Air" />

    <style name="ValueTextView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ValueTextView.Weather">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/low_space</item>
    </style>

    <style name="ValueTextView.Air">
        <item name="android:layout_marginStart">@dimen/low_space</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/test_air_concentration</item>
    </style>

    <style name="ValueTextView.AirQuality">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/test_air_quality</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_bg_weather</item>
        <item name="android:padding">@dimen/medium_space</item>
        <item name="android:layout_marginTop">@dimen/low_space</item>
        <item name="android:layout_marginStart">@dimen/low_space</item>
        <item name="android:layout_marginBottom">@dimen/low_space</item>
        <item name="android:layout_marginEnd">@dimen/low_space</item>
    </style>

    <style name="WeatherLinear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>